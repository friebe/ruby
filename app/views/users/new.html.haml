= form_for @user, url: {action: 'create'} do |f|
  %div.field
    = f.label :username, "Username", class:"label"
    = f.text_field :username, class: "input"
    = @user.errors[:username].to_sentence if @user.errors[:username].any?

  %div.field
    = f.label :password, "Password", class:"label"
    %div.control.has-icons-right
      = f.text_field :password, type:"password", class: "input js-showPassword"
      %span.icon.is-small.is-right
        %i x
      = @user.errors[:password].to_sentence if @user.errors[:password].any?

  %div.field
    = f.label :admin, "Admin", class:"label"
    = f.check_box :admin, class: "checkbox"

  %div.field
    = link_to 'Back', projects_path, :class => "button"
    = f.submit "Save", class: "button is-success"
