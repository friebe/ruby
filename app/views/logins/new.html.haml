= form_for :login, url: login_path do |f|
  %div.field
    - flash.each do |key, value|
      %div.notification.is-danger
        = value
  %div.field
    = @error_message

  %div.field
    = f.label :username, "Username", class:"label"
    = f.text_field :username, class: "input"

  %div.field
    = f.label :password, "Password", class:"label"
    = f.password_field :password, class: "input"

  %div.field
    = f.submit "Login", class: "button is-success"